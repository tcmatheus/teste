<!DOCTYPE html>
<html>
<head>
  <title>Product List</title>
</head>
<body>
  <h1>Product List</h1>
  <ul>
    <% if (products && products.length > 0) { %>
      <% products.forEach(product => { %>
        <li>
          <strong><%= product.nome %></strong><br>
          Price: <%= product.preco %><br>
          Code: <%= product.codigo %><br>
          ID: <%= product.id %>
        </li>
      <% }) %>
    <% } else { %>
      <li>No products found.</li>
    <% } %>
  </ul>

  <h2>Create a New Product</h2>
  <form action="/products" method="POST">
    <input type="text" name="nome" placeholder="Nome do produto" required><br>
    <input type="number" name="preco" placeholder="Preço do produto" required><br>
    <input type="text" name="codigo" placeholder="Código do produto" required><br>
    <input type="text" name="tipo" placeholder="Tipo do produto (P, S ou N)" required><br>
    <input type="text" name="situacao" placeholder="Situação do produto (A ou I)" required><br>
    <input type="text" name="formato" placeholder="Formato do produto (E, V ou S)" required><br>
    <button type="submit">Enviar</button>
  </form>
</body>
</html>